# OneKey KYC API Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
# Option 1: Supabase (Recommended)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_DB_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Option 2: Direct PostgreSQL (Alternative)
DATABASE_URL=postgresql://localhost:5432/onekey_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=onekey_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-for-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# KYC Providers
# Smile Identity (https://docs.smileidentity.com/)
SMILE_IDENTITY_API_KEY=your_smile_identity_api_key
SMILE_IDENTITY_PARTNER_ID=your_smile_identity_partner_id

# Onfido (https://documentation.onfido.com/)
ONFIDO_API_KEY=your_onfido_api_key

# Trulioo (https://developer.trulioo.com/)
TRULIOO_API_KEY=your_trulioo_api_key

# Blockchain & Authentication
# Privy (https://docs.privy.io/)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Blockchain & EAS Configuration (Base Sepolia Testnet)
BLOCKCHAIN_CHAIN_ID=84532
BLOCKCHAIN_RPC_URL=https://sepolia.base.org
EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021
EAS_SCHEMA_REGISTRY_ADDRESS=0x4200000000000000000000000000000000000020
ATTESTER_PRIVATE_KEY=your_private_key_for_creating_attestations
ATTESTER_ADDRESS=your_ethereum_address_for_attestations
EAS_SCHEMA_ID=your_eas_schema_id
EAS_ATTESTATION_URL=https://base-sepolia.easscan.org

# Decentralized Storage
# Filecoin/IPFS
FILECOIN_API_KEY=your_filecoin_api_key

# Arweave
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# Lit Protocol (https://developer.litprotocol.com/)
LIT_PROTOCOL_NETWORK=cayenne

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption Keys (Generate secure keys for production)
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_IV=your-16-character-iv-here
HASH_SALT=your-hash-salt-for-privacy-preserving-hashes

# API Configuration
API_VERSION=1.0.0

# Additional Development Settings (optional)
# LOG_LEVEL=debug
# ENABLE_SWAGGER=true
# MOCK_KYC_PROVIDERS=false

# Supabase Setup Instructions:
# 1. Go to https://supabase.com and create a new project
# 2. Copy your project URL and keys from Settings > API
# 3. Copy your database URL from Settings > Database
# 4. Run the migrations from src/database/migrations/001_initial_schema.sql in your Supabase SQL editor
# 5. Enable Row Level Security (RLS) for enhanced privacy protection 